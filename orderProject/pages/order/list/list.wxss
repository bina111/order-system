/* pages/order/list/list.wxss */
page{
    background: #f8f8f8;
}

.list-item{
    display: flex;
    padding: 20rpx;
    border-bottom: 1rpx solid #ececec;
    color: #999;
    font-size: 26rpx;
}

.list-item:last-child{
    border-bottom: 0;
}

.list-item-l{
    flex: 1;
}

.list-item-t{
    margin-bottom: 10rpx;
}

.list-item-name{
    font-size: 30rpx;
    color: #666;
    margin-right: 20rpx;
    margin-bottom: 10rpx;
}

.list-item-price{
    margin-left: 20rpx;
    color: #f7982a;
    font-weight: 600;
}

.list-item-r{
    display: flex;
    align-items: center;
}

.list-item-detail {
    text-align: center;
    color: #ff9000;
    font-size: 24rpx;
    padding: 17rpx 10rpx;
    background: #fff;
    border: 1rpx solid #ff9000;
    margin-right: 20rpx;
}

.list-item-taken {
    font-size: 24rpx;
    padding: 17rpx 10rpx;
}
  
.list-item-taken-yes {
    background: #d2d2d2;
    color: #999;
}
  
.list-item-taken-no {
    background: #ffd161;
    color: #fff;
}
  
.list-empty {
    margin-top: 80rpx;
    text-align: center;
}
  
.list-item-last {
    display: block;
    text-align: center;
}
  
  